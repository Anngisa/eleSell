border-1px($color)
	position:relative	
	&:after
		border-top:1px solid $color
		bottom:0
		left:0
		content:' '
		display:block
		left:0
		position:absolute
		width:100%	
bg-image($url)
	background-image:url($url+"@2x.png")
	@media(-webkit-min-device-pixel-ratio:3),(min-device-pixel-ration:3)
		background-img:url($url+"@3x.png")
border-none() 
	&:after
		display:none
